<div class="container">
  <h1>Add new restaurant</h1>
  <%= simple_form_for @restaurant, html: {class: 'form-horizontal'} do |f| %>
  <%= f.input :name, placeholder: 'Name' %>
  <%= f.input :address, placeholder: 'address' %>
  <%= f.input :phone_number, placeholder: 'phone_number' %>
  <%= f.input :category, placeholder: 'category', :collection => ["chinese", "italian", "japanese", "french", "belgian"] %>
  <div>
    <%= f.submit style: "margin-right:10px;margin-left: -15px", class: 'btn btn-primary'%>
    <% end %>
    <%= link_to "Back", restaurants_path, class: 'btn btn-danger'  %>
  </div>
</div>
